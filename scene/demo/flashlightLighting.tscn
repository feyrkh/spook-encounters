script/source = "extends BasicItem

export(Texture) var itemSlotIconTextureEnabled
export(Texture) var itemSlotIconTextureDisabled

func _ready():
	updateItemSlotIcon()

func onUseItem():
	$Light2D.visible = !$Light2D.visible
	updateItemSlotIcon()
	
func updateItemSlotIcon():
	if $Light2D.visible:
		# TODO: Create an event bus to communicate with the inventory to update its item icons, and change this to enabled
		itemSlotIconTexture = itemSlotIconTextureDisabled
	else:
		itemSlotIconTexture = itemSlotIconTextureDisabled
"

[sub_resource type="GDScript" id=2]
script/source = "extends BasicItem

onready var startingBrightness = $Light2D2.energy
const maxBrightnessDiff = 0.1

func onLightWithFire():
	$Light2D2.visible = true

func onUseItemWithEmptyHand():
	putOut()

func onUseItem():
	putOut()
	
func putOut():
	$Light2D2.visible = false


func _on_Timer_timeout():
	if $Light2D2.visible:
		$Light2D2.energy = startingBrightness + rand_range(-maxBrightnessDiff, maxBrightnessDiff)
"

